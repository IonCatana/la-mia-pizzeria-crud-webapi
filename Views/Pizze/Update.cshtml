@model PizzeCategorie

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Modifica Pizze</h1>
            </div>
            <form asp-controller="Pizze" asp-action="Update" asp-route-id="@Model.Pizze.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Immagine:</strong>
                    <input asp-for="Pizze.Immagine" class="d-block w-100" />
                    <span asp-validation-for="Pizze.Immagine" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Nome pizza:</strong>
                    <input asp-for="Pizze.Nome" class="d-block w-100" />
                    <span asp-validation-for="Pizze.Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Contenuto:</strong>
                    <textarea asp-for="Pizze.Descrizione" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="Pizze.Descrizione" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <textarea asp-for="Pizze.Prezzo" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="Pizze.Prezzo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="Pizze.CategoryId" class="form-select" aria-label="Default select example"> 
                        <option value="">Selezione categoria</option>
                        @foreach(Category category in Model.Categorie)
                        {
                            <option value="@category.Id">@category.NomeCategoria</option>
                        }
                    </select>
                </div>
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>
            </form>
        </div>
    </div>
</div>
